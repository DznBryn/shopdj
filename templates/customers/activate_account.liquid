{% layout 'theme' %}
<div class="section typeset standardpage">
<div id="customer-activate" class="row centerform">
    <h2>{{ 'customer.activate_account.title' | t }}</h2>
    <p class="note create-password">{{ 'customer.activate_account.subtext' | t }}</p>
    {% form 'activate_customer_password' %}
    {{ form.errors | default_errors }}

    <label class="label" for="password">{{ 'customer.activate_account.password' | t }}</label>
    <input type="password" value="" class="form-field" name="customer[password]" id="customer_password" class="text" size="16" />

    <label class="label" for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
    <input type="password" value="" class="form-field" name="customer[password_confirmation]" id="customer_password_confirmation" class="text" size="16" />

    <div class="action_bottom">
      <input class="btn btnblack" type="submit" value="{{ 'customer.activate_account.submit' | t }}" />
    </div>
    {% endform %}

</div>
</div>