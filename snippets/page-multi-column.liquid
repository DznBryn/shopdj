{% assign cols = content | split: '<!-- split -->' %}
{% if cols.size == 2 %}
  <div class="row">
  <div class="col-xs-6">
    {{ cols[0] }}
  </div>
  <div class="col-xs-6">
    {{ cols[1] }}
  </div>
  </div>
{% elsif cols.size == 3 %}
  <div class="col-xs-4">
    {{ cols[0] }}
  </div>
  <div class="col-xs-4">
    {{ cols[1] }}
  </div>
  <div class="col-xs-4">
    {{ cols[2] }}
  </div>
{% elsif cols.size == 4 %}
  <div class="col-xs-3">
    {{ cols[0] }}
  </div>
  <div class="col-xs-3">
    {{ cols[1] }}
  </div>
  <div class="col-xs-3">
    {{ cols[2] }}
  </div>
  <div class="col-xs-3">
    {{ cols[3] }}
  </div>
{% else %}
  {{ content }}
{% endif %}
