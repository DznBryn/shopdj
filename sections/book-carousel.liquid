<style media="screen">
.section-header-container,
.section-container{
    margin-bottom: 3em; 
}
.circle {
border-radius: 50%;
/* width and height can be anything, as long as they're equal */
    max-height: 200px;
}
.circle img{
    visibility: hidden;
    width: 200px;
    max-height: 200px;

}
.slick-slide{
    padding:0 20px ;
}

.section-container{
    padding-bottom: 1.5rem;
}

.slick-prev:before {
    color: black;
    content: "<i class="fa fa-chevron-left!important"></i>";
}
.slick-next:before {
    color: black;
    content: "<i class="fa fa-chevron-right!important"></i>";
}

@media screen and (min-width: 768px) {
    .container{
        padding: 0px;
    }
}


</style>
        


<div class="container section-container">
    <div class="section-header-container">
        <header><h2>{{ page.title }}'s Interviewees</h2></header>
        <h2>{{ section.settings.carousel_header }}</h2>
    </div>
    <div class="slider3" >
        {% for block in section.blocks %}
    {% if block.settings.carousel_image != blank %} 
        <a href= "{{ block.settings.carousel_url }}">
            <img src='{{ block.settings.carousel_image | img_url: '1024x1024' }}' class="circle"/>
        </a>
    {% endif %}
    {% endfor %}
    </div>
</div>



{% schema %}
{
    "name": "Interviewee Carousel",
    "settings": [
        {
            "type": "text",
            "id": "carousel_header",
            "label": "Carousel Header",
            "default": "Some of the people interviewed include:"
        }
    ],
    "blocks":[
        {
           "type": "image",
           "name": "Interviewee",
           "settings": [
                {
                    "type":"image_picker",
                    "id": "carousel_image",
                    "label": "Interviewee Image"
                },{
                    "type": "url",
                    "id": "carousel_url",
                    "label": "Image URL"
                }
           ] 
        }
    ]    
}
{% endschema %}

<script type="text/javascript" src="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick.min.js"></script>
<script>
    (function(){
        $('.slider3').slick({
            slidesToScroll: 1,
            centerPadding: '50px',
            slidesToShow: 5,
            nextArrow: '<i class="fa fa-chevron-right!important slick-next"></i>',
            prevArrow: '<i class="fa fa-chevron-left!important slick-prev"></i>',
            responsive: [
                {
                    breakpoint: 768,
                    settings: {
                        arrows: true,
                        centerMode: true,
                        centerPadding: '1px',
                        slidesToShow: 3,
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        arrows: true,
                        centerMode: true,
                        centerPadding: '1px',
                        slidesToShow: 1,
                    }
                }
            ]
        });
    })();
</script>
