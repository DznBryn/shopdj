<style>
body.front-page #biography .banner-1,
body.front-page #biography .banner-2,
body.front-page #biography .banner-3,
body.front-page #biography .banner-4{
    background-position: right;
    background-size: cover;
    background-repeat: no-repeat;
    background-color: #AB995A;
    position: relative;
    z-index: 1;
    padding-top: 20px;
    overflow: hidden;
    height: 100vh;
}
body.front-page #biography .overlay{
  width: 100%;
  height: 102vh;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 0;
  position: absolute;
  top: -10px;
}
</style>

<section id="biography" class="hidden-xs">
  <div class="slide banner-1" style="background-image: url('{{ 'img_daymond-yellow.jpg' | asset_url}}');">
    <div class="overlay"></div>
		<div class="contain">
			<div class="row">
              {% if settings.first-slide-content-position == 'left' %}
				<div class="col-sm-6 bio-content">
