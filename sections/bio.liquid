                  <h2 style="color:{{ settings.third-slide-text-color}};">{{settings.third-slide-title}}</h2>

                  <p style="color:{{ settings.third-slide-text-color}};">{{settings.third-slide-text}}</p>
                  <span class="button open-modal" data-modal="workwithdaymond">{{settings.third-slide-button-text}}</span>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.contain -->
	</div><!-- /.slide -->

  <div class="slide banner-4" style="background-image: url('{{ 'img_daymond-framing.jpg' | asset_url}}');">
    <div class="overlay"></div>
		<div class="contain">
			<div class="row">
              {% if settings.fourth-slide-content-position == 'left' %}
