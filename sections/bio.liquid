                  	<p style="color:{{ settings.second-slide-text-color}};">{{settings.second-slide-text}}</p>
					<span class="button open-modal" data-modal="workwithdaymond">{{settings.second-slide-button-text}}</span>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.contain -->
	</div><!-- /.slide -->

  <div class="slide banner-3" style="background-image: url('{{ 'img_daymond-godfather.jpg' | asset_url}}');">
    <div class="overlay"></div>
		<div class="contain">
			<div class="row">
              {% if settings.third-slide-content-position == 'left' %}
