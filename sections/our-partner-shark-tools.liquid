<style>
#section-{{ section.id }}{
    width: 100%;
}
#section-{{ section.id }} .section-wrapper{
    max-width: 100%;
}
#section-{{ section.id }} .section-wrapper .block-container {
    width: 100%;
}
#section-{{ section.id }} .section-wrapper .block-container .image-container{
    width: 100%;
    margin: 3em auto 0em;
    padding: 0em 3em;
}
#section-{{ section.id }} .section-wrapper .block-container .image-container a{
    
}
#section-{{ section.id }} .section-wrapper .block-container .image-container a img{
    width: 100%;
    border-radius: 200px;
}
#section-{{ section.id }} .section-wrapper .block-container .post-data{
    text-align: center;
    margin-bottom: 3em;
}
#section-{{ section.id }} .section-wrapper .block-container .post-data strong{
    display: inline-block;
    padding: 0 30px;
    font: 11px/1em "Gotham Bold", sans-serif;
    color: #C2B174;
    text-transform: uppercase;
    letter-spacing: .2em;
}
#section-{{ section.id }} .section-wrapper .block-container .post-data h2 a{
    color: inherit;
    text-decoration: none;
}
#section-{{ section.id }} .section-wrapper .block-container .post-data h2 a:hover{
    color: #C2B174;
}

@media screen and (min-width: 480px){
    #section-our-partner-shark-tools .section-wrapper .block-container {
        width: 33%;
        float: left;
    }
}
@media screen and (min-width: 768px){
    #section-our-partner-shark-tools .section-wrapper .block-container {
        width: 33%;
        float: left;
    }
    #section-{{ section.id }} .section-wrapper .block-container .post-data h2 {
        font-size: 20px;
    }
}
@media screen and (min-width: 1250px){
    #section-our-partner-shark-tools .section-wrapper{
        width: 1200px;
        margin: 0 auto;
    }
    #section-our-partner-shark-tools .section-wrapper .block-container {
        width: 25%;
        float: left;
    }
    #section-{{ section.id }} .section-wrapper .block-container .post-data h2 {
        font-size: 14px;
    }
}



</style>

<div id="section-{{ section.id }}">
    <div class="section-wrapper">
        {% for block in section.blocks %}
        <div class="block-container">
            <div class="image-container">
                <a href="{{ block.settings.partner_url }}"><img src="{{ block.settings.partner_logo | img_url: "master" }}"></a>
            </div>
            <div class="post-data " data-layout="col">
                <strong>Our Partner</strong> 
                <h2><a href="{{ block.settings.partner_url }}">{{ block.settings.partner_name }}</a></h2>
            </div><!-- /.post-data -->
        </div>
        {% endfor %}
        <div class="divider"></div>
    </div>
</div>

{% schema %}
{
    "name": "Shark Tool Partners",
    "settings": [],
    "blocks": [
        {
            "type": "shark-tool-partner",
            "name": "Shark Tool Partner",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "partner_logo",
                    "label": "Shark Tools Partner Logo"
                },{
                    "type": "text",
                    "id": "partner_name",
                    "label": "Partner Name",
                    "default": "Partner's Name"
                },{
                    "type": "url",
                    "id": "partner_url",
                    "label": "Partner's Website"
                }
            ]
        }
    ]
}
{% endschema %}