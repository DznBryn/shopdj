<script type="text/javascript">
jQuery(document).ready(function($){

var updateInlineCart = function() {
	var items = CartJS.cart.items,
  		totalPrice = 0;
  		inlineCartItems = '',
  		item_count = 0;


	$('.sidecar.cart .cart-items').html('');

	if ( items.length ) {

	    for( var i = 0; i < items.length; i++ ) {
			var item = items[i];

			inlineCartItems += '<div class="cart-item"> \
				<div class="item-image" style="background-image:url(\''+ item.image.replace(/(\.jpg|\.jpeg|\.png)/g, '_medium$1' ) +'\');"></div> \
				<div class="item-meta"> \
					<div class="item-type">'+ item.product_type +'</div> \
					<div class="item-title">'+ item.product_title +'</div> \
					<div class="item-price">'+ (item.price/100).toFixed(2) +'</div> \
					<span class="remove remove-item" data-variant-id="' + item.variant_id + '">Remove</span> \
				</div><!-- /.item-meta --> \
				<div class="item-quantity"> \
					<em>Quantity</em> \
					<strong>'+ item.quantity +'</strong> \
				</div><!-- /.item-quanitiy --> \
			</div><!-- /.cart-item -->';

			totalPrice = totalPrice + item.line_price;
			item_count += item.quantity;
	    }
	    $(inlineCartItems).prependTo($('.sidecar.cart .cart-items'));
	} else {  // carts empty bro, let's make sure customers know that

	}
	$('.cart-count .number').remove();
	if( items.length ) {
		$('<span class="number">'+item_count+'</span>').appendTo($('.cart-count'));
	}
	$('.cart-total-text').text('$' + (totalPrice/100).toFixed(2)); //and update the modal's total (try saying that 10 times fast)
};

updateInlineCart();



