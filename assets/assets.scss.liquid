/*=============Brian's Banner modification=============*/

body.front-page #hero .dj-banner {
  width: 100%;
  height: 328px;
  max-width: 100%;
  max-height: 100%;
  z-index: 0;
  position: absolute;
  background-size: cover;
  top: 40px;
  background-position-y: center;
}

@media screen and (min-width: 480px) {
  body.front-page #hero .dj-banner {
    height: 450px;
  }
}

@media only screen and (min-width: 769px) {
  body.front-page #hero .dj-banner {
    width: 100%;
    height: 633px;
    max-width: 100%;
    max-height: 100%;
    z-index: 0;
    position: absolute;
    background-size: cover;
    top: 40px;
  }
  body.front-page #hero .logo {
    top: 40%;
    width: 65%;
  }
  
}
@media only screen and (min-width: 992px) {
  body.front-page #hero .dj-banner {
    height: 100%;
    top:0;
    background-position-y: 20%;
  }
  body.front-page #hero .logo {
    top: 40%;
    left: 73%;
    width: 45%;
   }
  body.front-page #hero .logo {
    opacity:1;
    top: 25%;
    left: 22%;
    width: 38%;
  }
}
