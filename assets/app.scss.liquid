@import url("https://fonts.googleapis.com/css?family=EB+Garamond");
@font-face {
  font-family: 'Gotham Bold';
  src:	url({{ 'Gotham-Bold.eot?#iefix' | asset_url }}) format('embedded-opentype'),
  		url({{ 'Gotham-Bold.otf' | asset_url }}) format('opentype'),
  		url({{ 'Gotham-Bold.woff' | asset_url }}) format('woff'),
  		url({{ 'Gotham-Bold.ttf' | asset_url }}) format('truetype'),
  		url({{ 'Gotham-Bold.svg#Gotham-Bold' | asset_url }}) format('svg');
  font-weight: normal;
  font-style: normal;
}

$topbar-bg-color: #000000;
$body-bg-color: #000000;
$body-text-color: #ffffff;

//Sections
$section1-bg-color: #ffffff;
$section1-text-color: #000000;
$section2-text-color: #ffffff;
$section3-text-color: #ffffff;

body {
  background: $body-bg-color;
  color: $body-text-color;
  ul {
    padding-left: 1em;
  }
  a {
    color: #C2B174;
    &:hover {
      color: #C2B174;
      opacity: .8;
    }
  }
}

.top-bar {
  background: $topbar-bg-color;
  padding: 0.2em 0;
  visibility: hidden;
}

.section-container {
  max-width: 1400px;
  padding: .5em 0;
  visibility: hidden;
}

.button {
  transition: all 0.2s ease;
  outline: none;
  &.submit-btn {
    display: inline-block;
    vertical-align: middle;
    margin: 0;
    padding: 0.6em 1em;
    -webkit-appearance: none;
    border: none;
    border-radius: 0;
    transition: background-color 0.25s ease-out, color 0.25s ease-out;
    font-size: 3rem;
    line-height: 1;
    text-align: center;
    cursor: pointer;
    color: #ffffff;
    text-transform: uppercase;
    font-weight: bold;
    font-family: "Gotham Bold", sans-serif;
    letter-spacing: -3px;
    width: 100%;
  }
  &.gradient-btn{
    background: rgba(202,176,92,1);
    background: -moz-linear-gradient(top, rgba(202,176,92,1) 0%, rgba(162,114,3,1) 100%);
    background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(202,176,92,1)), color-stop(100%, rgba(162,114,3,1)));
    background: -webkit-linear-gradient(top, rgba(202,176,92,1) 0%, rgba(162,114,3,1) 100%);
    background: -o-linear-gradient(top, rgba(202,176,92,1) 0%, rgba(162,114,3,1) 100%);
    background: -ms-linear-gradient(top, rgba(202,176,92,1) 0%, rgba(162,114,3,1) 100%);
    background: linear-gradient(to bottom, rgba(202,176,92,1) 0%, rgba(162,114,3,1) 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#cab05c', endColorstr='#a27203', GradientType=0 );
    &:hover {
      opacity: .8;
      background: rgba(162,114,3,1);
      background: -moz-linear-gradient(top, rgba(162,114,3,1) 0%, rgba(202,176,92,1) 100%);
      background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(162,114,3,1)), color-stop(100%, rgba(202,176,92,1)));
      background: -webkit-linear-gradient(top, rgba(162,114,3,1) 0%, rgba(202,176,92,1) 100%);
      background: -o-linear-gradient(top, rgba(162,114,3,1) 0%, rgba(202,176,92,1) 100%);
      background: -ms-linear-gradient(top, rgba(162,114,3,1) 0%, rgba(202,176,92,1) 100%);
      background: linear-gradient(to bottom, rgba(162,114,3,1) 0%, rgba(202,176,92,1) 100%);
      filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#a27203', endColorstr='#cab05c', GradientType=0 );
    }
  }
}

form {
  &.free-sample-form {
    max-width: 45em;
    margin: 0 auto;
    padding: 1em 0 0 0;
    width: 100%;
    margin-top: .5em;
    input {
      &[type="text"], &[type="email"]{
        display: block;
        box-sizing: border-box;
        width: 100%;
        height: 3rem;
        margin: 0 0 1rem;
        padding: 0.5rem;
        border: 1px solid #eaeaea;
        border-radius: 0;
        background-color: #eaeaea;
        box-shadow: none;
        font-family: inherit;
        font-size: 1.5rem;
        font-weight: normal;
        color: #000000;
        transition: box-shadow 0.5s, border-color 0.25s ease-in-out;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        &::-webkit-input-placeholder { /* Chrome/Opera/Safari */
          color: #999;
        }
        &::-moz-placeholder { /* Firefox 19+ */
          color: #999;
        }
        &:-ms-input-placeholder { /* IE 10+ */
          color: #999;
        }
        &:-moz-placeholder { /* Firefox 18- */
          color: #999;
        }
        &:focus {
          outline: none;
          border: 1px solid #8a8a8a;
          background-color: #eaeaea;
          box-shadow: 0 0 5px #cacaca;
          transition: box-shadow 0.5s, border-color 0.25s ease-in-out;
        }
      }
    }
    &.second-form {
      // margin-left: -0.9375rem !important;
      // margin-right: -0.9375rem !important;
    }
  }
}

#section1 {
  background: $section1-bg-color;
  color: $section1-text-color;
  h4 {
    margin: .5em 0 1em;
  }
  padding-bottom: 1em;
}

#section2 {
  background: #555555;
  .section-container {
    padding: .5em 0;
  }
  img {
    max-width: 70%;
  }
}

#section3 {
  padding-bottom: 1.5em;
  .section-container {
    max-width: 1200px;
    padding: 1em 0;
  }
  .big-btn-container {
    text-align: center;
  }
  .button {
    font-size: 2em;
    &.enroll-btn {
      max-width: 60%;
      margin-top: .75em;
    }
  }
  *:not(.button){
    color:$section3-text-color;
  }
  h5{
    color:#ffffff
  }
}

